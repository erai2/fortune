
entrypoint = "index.js"
modules = ["nodejs-20:v8-20230920-bd784b9", "python-3.11"]
hidden = [".config", "package-lock.json"]

[nix]
channel = "stable-23_05"

[unitTest]
language = "nodejs"

[deployment]
run = ["node index.js"]

[workflows]
runButton = "Full Stack App"

[[workflows.workflow]]
name = "Full Stack App"
author = 42442916
mode = "sequential"
[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"uvicorn main:app\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"vite\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && pip install -r requirements.txt && uvicorn main:app --host 0.0.0.0 --port 8000 &"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 3"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm install && npm run dev -- --host 0.0.0.0 --port 5000"

[[ports]]
localPort = 5000

[[ports]]
localPort = 8000
