# -*- coding: utf-8 -*-
"""Page for creating structured fortune-telling analyses."""

import streamlit as st
from modules import suam_analysis

st.title("구조 해석 입력")

with st.form("analysis_form"):
    term = st.text_input("용어")
    definition = st.text_area("설명")
    submitted = st.form_submit_button("저장")
    if submitted:
        suam_analysis.save_analysis({"term": term, "definition": definition})
        st.success("저장되었습니다")
